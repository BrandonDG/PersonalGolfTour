@model PersonalGolfTour.Models.TourViewModels.TourViewModel
@{
    ViewData["Title"] = "Tour";
    Layout = "_Layout";
}

<h2>_TourLayout</h2>
<div class="jumbotron">
    <h1>@Model.Tour.TourName</h1>
</div>
<nav class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a style="color:white;" asp-area="" asp-controller="Tour" asp-action="TourStandings" asp-route-id="@Model.Tour.TourId">Standings</a></li>
                <li><a style="color:white;" asp-area="" asp-controller="Tour" asp-action="TourPlayers" asp-route-id="@Model.Tour.TourId">Players</a></li>
                <li><a style="color:white;" asp-area="" asp-controller="Tour" asp-action="PlacementRules" asp-route-id="@Model.Tour.TourId">Rules</a></li>
                <li><a style="color:white;" asp-area="" asp-controller="Tour" asp-action="TourEvents" asp-route-id="@Model.Tour.TourId">Event Events</a></li>
            </ul>
        </div>
    </div>
</nav>
@RenderBody()
