@model PersonalGolfTour.Models.TourViewModels.TourViewModel
@{
    ViewData["Title"] = "TourPlayers";
    Layout = "_TourLayout";
}

<h2>TourPlayers</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Display Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TourMembers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="RemoveMemberFromTour" asp-route-id="@item.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
